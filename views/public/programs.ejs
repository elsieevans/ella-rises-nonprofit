<%- include('../partials/header') %>

<!-- Page Header -->
<section class="page-header" style="padding-bottom: 1rem; margin-bottom: 0;">
  <div class="container">
    <h1>Programs</h1>
    <p class="page-subtitle">Discover opportunities to learn, grow, and lead</p>
  </div>
</section>

<!-- Program Categories -->
<section class="programs-overview" style="padding: 1rem 0;">
  <div class="container">
    <div class="programs-nav">
      <a href="#ballet" class="program-nav-item">Ballet Folklórico</a>
      <a href="#mariachi" class="program-nav-item">Mariachi</a>
      <a href="#steam" class="program-nav-item">STEAM</a>
      <a href="#summit" class="program-nav-item">Summit + Educational Pathways</a>
    </div>
  </div>
</section>

<!-- Ballet Folklórico -->
<section id="ballet" class="program-section" style="padding-top: 1rem;">
  <div class="container">
    <h2>Ballet Folklórico</h2>
    <p>Traditional Mexican folk dance</p>
    
    <div class="program-content" style="display: flex; gap: 2rem; align-items: flex-start; flex-wrap: wrap; margin-top: 2rem;">
      <div class="program-description" style="flex: 1; min-width: 300px;">
        <p>Experience the vibrant culture and artistry of traditional Mexican folk dance through Ballet Folklórico. Our program celebrates heritage and builds confidence through the beauty of dance.</p>
        
        <h3>Program Details</h3>
        <ul class="detail-list">
          <li><strong>Ages:</strong> Girls ages 11-18 years old</li>
          <li><strong>Schedule:</strong> Mondays at 7pm</li>
          <li><strong>Auditions:</strong> Auditions for 2026 begin in May</li>
        </ul>
      </div>
      <div class="program-image" style="flex: 1; min-width: 300px;">
        <img src="/images/balletfolk.png" alt="Ballet Folklórico dancers" style="width: 100%; height: auto; border-radius: 8px;">
      </div>
    </div>
  </div>
</section>

<!-- Mariachi -->
<section id="mariachi" class="program-section program-section--alt" style="padding-top: 1rem;">
  <div class="container">
    <h2>Mariachi</h2>
    <p>Traditional Mexican music instruction</p>
    
    <div class="program-content" style="display: flex; gap: 2rem; align-items: flex-start; flex-wrap: wrap; margin-top: 2rem;">
      <div class="program-description" style="flex: 1; min-width: 300px;">
        <p>Learn the art of traditional Mexican mariachi music through our comprehensive music program. Students receive instruction in authentic mariachi instruments and performance techniques.</p>
        
        <h3>Program Details</h3>
        <ul class="detail-list">
          <li><strong>Ages:</strong> Girls ages 11-18</li>
          <li><strong>Instruments:</strong> Violin, trumpet, guitarrón, vihuela, and guitar</li>
          <li><strong>Schedule:</strong> Mondays from 5:30pm - 6:45pm</li>
          <li><strong>Program Fee:</strong> $45 annual fee (venmo or cash)</li>
        </ul>
      </div>
      <div class="program-image" style="flex: 1; min-width: 300px;">
        <img src="/images/Mariachi_Group.png" alt="Mariachi group" style="width: 100%; height: auto; border-radius: 8px;">
      </div>
    </div>
  </div>
</section>

<!-- STEAM Programs -->
<section id="steam" class="program-section" style="padding-top: 1rem;">
  <div class="container">
    <h2>STEAM</h2>
    <p>Science, Technology, Engineering, Art, and Math</p>
    
    <div class="program-content" style="display: flex; gap: 2rem; align-items: flex-start; flex-wrap: wrap; margin-top: 2rem;">
      <div class="program-description" style="flex: 1; min-width: 300px;">
        <p>Virtual and in-person STEAM (science, technology, engineering, art, and math) workshops to develop and guide participant inquiry, discussion, and critical thinking of STEAM related careers. Workshops produced in partnership with Thanksgiving Point, UVU, and BYU.</p>
      </div>
      <div class="program-image" style="flex: 1; min-width: 300px;">
        <img src="/images/steam.png" alt="STEAM workshop" style="width: 100%; height: auto; border-radius: 8px;">
      </div>
    </div>
  </div>
</section>

<!-- Summit + Educational Pathways -->
<section id="summit" class="program-section program-section--alt" style="padding-top: 1rem;">
  <div class="container">
    <h2>Summit + Educational Pathways</h2>
    <p>Discover your potential through art, STEM, and education</p>
    
    <div class="program-content" style="display: flex; gap: 2rem; align-items: flex-start; flex-wrap: wrap; margin-top: 2rem;">
      <div class="program-description" style="flex: 1; min-width: 300px;">
        <p>Day camp packed with activities to give a glimpse of the Ella Rises Experience: art, STEM, and a focus on education! Conclude the day camp with a tour of a local university or technical college!</p>
        
        <h3>Program Details</h3>
        <ul class="detail-list">
          <li><strong>Ages:</strong> Girls ages 11-18 years old</li>
          <li><strong>Format:</strong> Day camp with hands-on activities</li>
          <li><strong>Experience:</strong> Art, STEM activities, and educational focus</li>
          <li><strong>Tour:</strong> University or technical college campus tour included</li>
        </ul>
      </div>
      <div class="program-image" style="flex: 1; min-width: 300px;">
        <img src="/images/summiteducational.png" alt="Summit and Educational Pathways activities" style="width: 100%; height: auto; border-radius: 8px;">
      </div>
    </div>
  </div>
</section>

<!-- Upcoming Events -->
<section class="events-section">
  <div class="container">
    <div class="section-header">
      <span class="section-label">Upcoming Events</span>
      <h2>Join Our Next Event</h2>
    </div>
    
    <% if (events && events.length > 0) { %>
      <div class="events-list">
        <% events.slice(0, 6).forEach(event => { %>
          <article class="event-list-item">
            <div class="event-date-box">
              <span class="month"><%= new Date(event.EventDateTimeStart).toLocaleString('en-US', { month: 'short' }) %></span>
              <span class="day"><%= new Date(event.EventDateTimeStart).getDate() %></span>
              <span class="year"><%= new Date(event.EventDateTimeStart).getFullYear() %></span>
            </div>
            <div class="event-info">
              <span class="event-badge event-badge--<%= (event.EventType || 'other').toLowerCase() %>"><%= event.EventType %></span>
              <h3><%= event.EventName %></h3>
              <p><%= event.EventDescription ? event.EventDescription.substring(0, 150) + '...' : '' %></p>
              <div class="event-meta">
                <span>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                  <%= event.EventLocation || 'TBD' %>
                </span>
                <span>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                  <%= new Date(event.EventDateTimeStart).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                </span>
                <% if (event.EventCapacity) { %>
                  <span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg>
                    <%= event.EventCapacity %> spots
                  </span>
                <% } %>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <p class="no-events">Check back soon for upcoming events!</p>
    <% } %>
  </div>
</section>

<!-- CTA -->
<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2>Ready to Get Started?</h2>
      <p>Contact us to learn more about our programs and how to enroll.</p>
      <div class="cta-buttons">
        <a href="/contact" class="btn btn-cta btn-lg">Contact Us</a>
        <a href="/get-involved" class="btn btn-light btn-lg">Get Involved</a>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
