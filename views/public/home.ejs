<%- include('../partials/header') %>

<!-- Hero Section -->
<section class="hero" aria-label="Hero section">
  <div class="hero-background">
    <div class="hero-image"></div>
    <div class="hero-overlay"></div>
  </div>
  <div class="hero-content">
    <h1 class="hero-title">Inspiring Young Women to <span class="highlight">Rise</span> in STEAM</h1>
    <div class="steam-acronym">
      <span class="steam-letter"><strong>S</strong>cience</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>T</strong>echnology</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>E</strong>ngineering</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>A</strong>rt</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>M</strong>athematics</span>
    </div>
    <p class="hero-description">Through mentoring, creative workshops, and leadership opportunities, we empower young women to pursue higher education and embrace their heritage.</p>
    <div class="hero-cta">
      <a href="/programs" class="btn btn-primary btn-lg">Explore Programs</a>
      <a href="/donate" class="btn btn-secondary btn-lg">Support Our Mission</a>
    </div>
  </div>
</section>

<!-- Impact Stats -->
<section class="stats-section" aria-label="Impact statistics">
  <div class="container">
    <div class="stats-grid">
      <div class="stat-card">
        <span class="stat-number"><%= stats.participants %>+</span>
        <span class="stat-label">Young Women Empowered</span>
      </div>
      <div class="stat-card">
        <span class="stat-number"><%= stats.events %>+</span>
        <span class="stat-label">Programs & Events</span>
      </div>
      <div class="stat-card">
        <span class="stat-number"><%= stats.milestones %>+</span>
        <span class="stat-label">Milestones Achieved</span>
      </div>
    </div>
  </div>
</section>

<!-- Mission Preview -->
<section class="mission-preview" aria-labelledby="mission-heading">
  <div class="container">
    <div class="mission-grid">
      <div class="mission-content">
        <span class="section-label">Our Mission</span>
        <h2 id="mission-heading">Building Confidence Through Education & Heritage</h2>
        <p>Ella Rises aims to empower the rising generation of women to pursue higher education and embrace their heritage through mentoring, creative workshops, and leadership opportunities that build both technical competence and artistic confidence.</p>
        <ul class="mission-points">
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            STEAM education and workshops
          </li>
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            Leadership development programs
          </li>
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            Cultural heritage celebration
          </li>
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            Mentoring & community support
          </li>
        </ul>
        <a href="/mission" class="btn btn-outline">Learn More About Our Mission</a>
      </div>
      <div class="mission-visual" style="display: block;">
        <img src="/images/fixedcutegirls.png" alt="Young women in our program" style="width: 100%; height: 100%; min-height: 500px; object-fit: cover; border-radius: 12px; box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);">
