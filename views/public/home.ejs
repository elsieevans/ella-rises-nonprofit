<%- include('../partials/header') %>

<!-- Hero Section -->
<section class="hero" aria-label="Hero section">
  <div class="hero-background">
    <div class="hero-gradient"></div>
    <div class="hero-pattern"></div>
  </div>
  <div class="hero-content">
    <span class="hero-label">Empowering the Next Generation</span>
    <h1 class="hero-title">Inspiring Young Women to <span class="highlight">Rise</span> in STEAM</h1>
    <div class="steam-acronym">
      <span class="steam-letter"><strong>S</strong>cience</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>T</strong>echnology</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>E</strong>ngineering</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>A</strong>rt</span>
      <span class="steam-dot">•</span>
      <span class="steam-letter"><strong>M</strong>athematics</span>
    </div>
    <p class="hero-description">Through mentoring, creative workshops, and leadership opportunities, we empower young women to pursue higher education and embrace their heritage.</p>
    <div class="hero-cta">
      <a href="/programs" class="btn btn-primary btn-lg">Explore Programs</a>
      <a href="https://givebutter.com/EllaRises" class="btn btn-secondary btn-lg" target="_blank" rel="noopener noreferrer">Support Our Mission</a>
    </div>
  </div>
</section>

<!-- Impact Stats -->
<section class="stats-section" aria-label="Impact statistics">
  <div class="container">
    <div class="stats-grid">
      <div class="stat-card">
        <span class="stat-number"><%= stats.participants %>+</span>
        <span class="stat-label">Young Women Empowered</span>
      </div>
      <div class="stat-card">
        <span class="stat-number"><%= stats.events %>+</span>
        <span class="stat-label">Programs & Events</span>
      </div>
      <div class="stat-card">
        <span class="stat-number"><%= stats.milestones %>+</span>
        <span class="stat-label">Milestones Achieved</span>
      </div>
    </div>
  </div>
</section>

<!-- Mission Preview -->
<section class="mission-preview" aria-labelledby="mission-heading">
  <div class="container">
    <div class="mission-grid">
      <div class="mission-content">
        <span class="section-label">Our Mission</span>
        <h2 id="mission-heading">Building Confidence Through Education & Heritage</h2>
        <p>Ella Rises aims to empower the rising generation of women to pursue higher education and embrace their heritage through mentoring, creative workshops, and leadership opportunities that build both technical competence and artistic confidence.</p>
        <ul class="mission-points">
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            STEAM education and workshops
          </li>
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            Leadership development programs
          </li>
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            Cultural heritage celebration
          </li>
          <li>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            Mentoring & community support
          </li>
        </ul>
        <a href="/mission" class="btn btn-outline">Learn More About Our Mission</a>
      </div>
      <div class="mission-visual" style="display: block;">
        <img src="/images/fixedcutegirls.png" alt="Young women in our program" style="width: 100%; height: 100%; min-height: 500px; object-fit: cover; border-radius: 12px; box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);">
      </div>
    </div>
  </div>
</section>

<!-- Programs Button -->
<section class="programs-cta" style="padding: var(--space-3xl) 0; text-align: center;">
  <div class="container">
    <a href="/programs" class="btn btn-primary btn-lg">Discover Our Programs</a>
  </div>
</section>

<!-- Upcoming Events -->
<% if (upcomingEvents && upcomingEvents.length > 0) { %>
<section class="events-preview" aria-labelledby="events-heading">
  <div class="container">
    <div class="section-header">
      <div>
        <span class="section-label">Upcoming Events</span>
        <h2 id="events-heading">Join Us</h2>
      </div>
      <a href="/programs" class="btn btn-outline">View All Events</a>
    </div>
    
    <div class="events-grid">
      <% upcomingEvents.forEach(event => { %>
        <article class="event-card">
          <div class="event-date">
            <span class="event-month"><%= new Date(event.EventDateTimeStart).toLocaleString('en-US', { month: 'short' }) %></span>
            <span class="event-day"><%= new Date(event.EventDateTimeStart).getDate() %></span>
          </div>
          <div class="event-details">
            <span class="event-type"><%= (event.EventType || '').toUpperCase() %></span>
            <h3 class="event-title"><%= event.EventName %></h3>
            <p class="event-location">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
              <%= event.EventLocation %>
            </p>
            <p class="event-time">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              <%= new Date(event.EventDateTimeStart).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
              <% if (event.EventDateTimeEnd) { %> - <%= new Date(event.EventDateTimeEnd).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %><% } %>
            </p>
          </div>
        </article>
      <% }) %>
    </div>
  </div>
</section>
<% } %>

<!-- Call to Action -->
<section class="cta-section" aria-labelledby="cta-heading">
  <div class="container">
    <div class="cta-content">
      <h2 id="cta-heading">Help Us Empower the Next Generation</h2>
      <p>Your support enables us to provide STEAM education, mentoring, and leadership opportunities to young women who will shape our future.</p>
      <div class="cta-buttons">
        <a href="https://givebutter.com/EllaRises" class="btn btn-cta btn-lg" target="_blank" rel="noopener noreferrer">Donate Now</a>
        <a href="/get-involved" class="btn btn-light btn-lg">Get Involved</a>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
