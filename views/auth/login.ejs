<%- include('../partials/header') %>

<section class="auth-section">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="auth-logo">
          <span class="logo-text">ELLA</span>
          <span class="logo-accent">RISES</span>
        </div>
        <h1>Welcome Back</h1>
        <p>Sign in to access the management portal</p>
      </div>
      
      <form class="auth-form" action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required autofocus autocomplete="email" aria-required="true">
        </div>
        
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required autocomplete="current-password" aria-required="true">
        </div>
        
        <button type="submit" class="btn btn-primary btn-lg btn-block">Sign In</button>
      </form>
      
      <div class="auth-footer">
        <p>Don't have an account? <a href="/auth/register">Register here</a></p>
        <p><a href="/">‚Üê Back to website</a></p>
      </div>
      
      <div class="demo-credentials">
        <h3>Demo Credentials</h3>
        <p><strong>Manager:</strong> manager@ellarises.org / password123</p>
        <p><strong>Viewer:</strong> user@ellarises.org / password123</p>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>

