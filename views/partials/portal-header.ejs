<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Ella Rises Portal' %></title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="apple-touch-icon" href="/favicon.png">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Montserrat:wght@300;400;500;600;700;800&family=Pacifico&display=swap" rel="stylesheet">
  
  <!-- Styles -->
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/portal.css">
  
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <!-- Marked.js for Markdown parsing -->
  <script src="https://cdn.jsdelivr.net/npm/marked@11.1.1/marked.min.js"></script>
  
  <!-- Highlight.js for code syntax highlighting -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/highlight.js@11.9.0/styles/github.min.css">
  <script src="https://cdn.jsdelivr.net/npm/highlight.js@11.9.0/highlight.min.js"></script>
  
  <!-- AI Chat -->
  <script src="/js/ai-chat.js" defer></script>
</head>
<body class="portal-body">
  
  <!-- Portal Sidebar -->
  <aside class="portal-sidebar" role="navigation" aria-label="Portal navigation">
    <div class="sidebar-header">
      <a href="/" class="sidebar-logo">
        <img src="/images/image.png" alt="Ella Rises" class="sidebar-logo-img">
      </a>
      <span class="sidebar-subtitle">Management Portal</span>
    </div>
    
    <nav class="sidebar-nav">
      <ul>
        <% if (user && user.role === 'Admin') { %>
        <li>
          <a href="/portal/dashboard" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></svg>
            Dashboard
          </a>
        </li>
        <% } %>
        <li>
          <a href="/portal/participants" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'participants' ? 'active' : '' %>">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            Participants
          </a>
        </li>
        <li>
          <a href="/portal/events" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'events' ? 'active' : '' %>">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
            Events
          </a>
        </li>
        <li>
          <a href="/portal/surveys" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'surveys' ? 'active' : '' %>">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
            Surveys
          </a>
        </li>
        <li>
          <a href="/portal/milestones" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'milestones' ? 'active' : '' %>">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="8" r="7"/><polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/></svg>
            Milestones
          </a>
        </li>
        <li>
          <a href="/portal/donations" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'donations' ? 'active' : '' %>">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
            Donations
          </a>
        </li>
        <li>
          <a href="/portal/analytics" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'analytics' ? 'active' : '' %>">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21.21 15.89A10 10 0 1 1 8 2.83"/><path d="M22 12A10 10 0 0 0 12 2v10z"/></svg>
            Analytics
          </a>
        </li>
      </ul>
    </nav>
    
    <div class="sidebar-footer">
      <!-- AI Help Button -->
      <button id="ai-help-button" class="ai-help-button" aria-label="Open AI Assistant">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
        <span>AI Assistant</span>
      </button>
      
      <div class="user-info">
        <div class="user-avatar">
          <%= user ? user.first_name.charAt(0) + user.last_name.charAt(0) : 'U' %>
        </div>
        <div class="user-details">
          <span class="user-name"><%= user ? user.first_name + ' ' + user.last_name : 'User' %></span>
          <span class="user-role"><%= user ? (user.role === 'Admin' ? 'Admin' : 'Viewer') : '' %></span>
        </div>
      </div>
      <a href="/" class="sidebar-link sidebar-link--small">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        Public Site
      </a>
      <a href="/auth/logout" class="sidebar-link sidebar-link--small">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
        Logout
      </a>
    </div>
  </aside>
  
  <!-- AI Chat Panel -->
  <div id="ai-chat-panel" class="ai-chat-panel">
    <div class="ai-chat-header">
      <div class="ai-chat-title">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
        </svg>
        <span>AI Assistant</span>
      </div>
      <button id="ai-chat-close" class="ai-chat-close" aria-label="Close AI Assistant">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
    
    <div id="ai-chat-messages" class="ai-chat-messages">
      <!-- Initial greeting will be added by JavaScript with markdown support -->
    </div>
    
    <div class="ai-chat-input-container">
      <textarea 
        id="ai-chat-input" 
        class="ai-chat-input" 
        placeholder="Ask a question about your data..."
        rows="2"
      ></textarea>
      <button id="ai-chat-send" class="ai-chat-send" aria-label="Send message">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="22" y1="2" x2="11" y2="13"/>
          <polygon points="22 2 15 22 11 13 2 9 22 2"/>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Main Content -->
  <div class="portal-main">
    <!-- Top Bar -->
    <header class="portal-topbar">
      <button class="sidebar-toggle" aria-label="Toggle sidebar">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
      </button>
      <h1 class="topbar-title"><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Dashboard' %></h1>
      <div class="topbar-actions">
        <% if (user && user.role === 'Admin') { %>
          <span class="role-badge role-badge--admin">Admin</span>
        <% } else { %>
          <span class="role-badge role-badge--viewer">Viewer</span>
        <% } %>
      </div>
    </header>
    
    <!-- Flash Messages -->
    <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
      <div class="flash-message flash-success" role="alert">
        <span><%= success_msg %></span>
        <button class="flash-close" aria-label="Close message">&times;</button>
      </div>
    <% } %>
    
    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
      <div class="flash-message flash-error" role="alert">
        <span><%= error_msg %></span>
        <button class="flash-close" aria-label="Close message">&times;</button>
      </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
      <div class="flash-message flash-error" role="alert">
        <span><%= error %></span>
        <button class="flash-close" aria-label="Close message">&times;</button>
      </div>
    <% } %>
    
    <main id="main-content" class="portal-content">

