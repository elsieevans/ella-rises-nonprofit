<%- include('../../partials/portal-header', { currentPage: 'milestones', pageTitle: 'Milestones' }) %>

<div class="page-actions">
  <% if (user && user.role === 'Admin') { %>
    <a href="/portal/milestones/new" class="btn btn-primary">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      Add Milestone
    </a>
  <% } %>
</div>

<!-- Popular Milestones -->
<% if (popular && popular.length > 0) { %>
<div class="stats-row">
  <% popular.forEach(p => { %>
  <div class="mini-stat">
    <span class="mini-stat-value"><%= p.count %></span>
    <span class="mini-stat-label"><%= p.MilestoneTitle %></span>
  </div>
  <% }) %>
</div>
<% } %>

<!-- Filters -->
<div class="filters-card">
  <form class="filters-form" method="GET" action="/portal/milestones">
    <div class="filter-group">
      <label for="search">Search</label>
      <input type="text" id="search" name="search" value="<%= filters.search || '' %>" placeholder="Title or participant name...">
    </div>
    <button type="submit" class="btn btn-secondary">Filter</button>
    <a href="/portal/milestones" class="btn btn-outline">Clear</a>
  </form>
</div>

<!-- Data Table -->
<div class="table-card">
  <div class="table-responsive">
    <table class="data-table" role="table" aria-label="Milestones list">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Title</th>
          <th scope="col">Participant</th>
          <th scope="col" class="actions-col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (milestones && milestones.length > 0) { %>
          <% milestones.forEach(m => { %>
            <tr>
              <td data-label="Date"><%= new Date(m.MilestoneDate).toLocaleDateString() %></td>
              <td data-label="Title"><strong><%= m.MilestoneTitle %></strong></td>
              <td data-label="Participant">
                <%= m.ParticipantFirstName %> <%= m.ParticipantLastName %>
              </td>
              <td class="actions-col">
                <div class="action-buttons">
                  <a href="/portal/milestones/<%= m.MilestoneID %>" class="btn-icon" title="View" aria-label="View milestone">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                  </a>
                  <% if (user && user.role === 'Admin') { %>
                    <a href="/portal/milestones/<%= m.MilestoneID %>/edit" class="btn-icon" title="Edit" aria-label="Edit milestone">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                    </a>
                    <form action="/portal/milestones/<%= m.MilestoneID %>/delete" method="POST" class="inline-form" onsubmit="return confirm('Delete this milestone record?')">
                      <button type="submit" class="btn-icon btn-icon--danger" title="Delete" aria-label="Delete milestone">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                      </button>
                    </form>
                  <% } %>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="no-data">No milestones found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../../partials/portal-footer') %>
