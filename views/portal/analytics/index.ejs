<script type='text/javascript'>
  function resizeTableau() {
    var divElement = document.getElementById('viz1764786412582');
    if (!divElement) return;
    
    var vizElement = divElement.getElementsByTagName('object')[0];
    if (!vizElement) return;
    
    var containerWidth = divElement.offsetWidth;
    var windowHeight = window.innerHeight;
    
    // Set width to 100% for all screen sizes
    vizElement.style.width = '100%';
    
    // Responsive height based on screen size
    if (containerWidth > 1000) {
      // Desktop: larger height
      vizElement.style.height = '1127px';
    } else if (containerWidth > 768) {
      // Tablet landscape
      vizElement.style.height = '1000px';
    } else if (containerWidth > 500) {
      // Tablet portrait
      vizElement.style.height = '900px';
    } else {
      // Mobile: taller to accommodate stacked layout
      vizElement.style.height = Math.max(windowHeight * 1.5, 1400) + 'px';
    }
  }
  
  // Initial setup
  var divElement = document.getElementById('viz1764786412582');
  var vizElement = divElement.getElementsByTagName('object')[0];
  
  // Initial sizing
  resizeTableau();
  
  // Load Tableau script
  var scriptElement = document.createElement('script');
  scriptElement.src = 'https://public.tableau.com/javascripts/api/viz_v1.js';
  vizElement.parentNode.insertBefore(scriptElement, vizElement);
  
  // Resize on window resize and orientation change
  window.addEventListener('resize', resizeTableau);
  window.addEventListener('orientationchange', function() {
    setTimeout(resizeTableau, 100);
  });
</script>

