<%- include('../../partials/portal-header', { currentPage: 'surveys', pageTitle: 'Surveys' }) %>

<div class="page-actions">
  <% if (user && user.role === 'manager') { %>
    <a href="/portal/surveys/new" class="btn btn-primary">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      Add Survey
    </a>
  <% } %>
</div>

<!-- Stats Cards -->
<div class="stats-row">
  <div class="mini-stat">
    <span class="mini-stat-value"><%= stats.total_responses %></span>
    <span class="mini-stat-label">Total Responses</span>
  </div>
  <div class="mini-stat">
    <span class="mini-stat-value"><%= parseFloat(stats.avg_satisfaction || 0).toFixed(1) %>/5</span>
    <span class="mini-stat-label">Avg. Satisfaction</span>
  </div>
  <div class="mini-stat">
    <span class="mini-stat-value"><%= parseFloat(stats.avg_usefulness || 0).toFixed(1) %>/5</span>
    <span class="mini-stat-label">Avg. Usefulness</span>
  </div>
  <div class="mini-stat">
    <span class="mini-stat-value"><%= parseFloat(stats.avg_recommendation || 0).toFixed(1) %>/10</span>
    <span class="mini-stat-label">Avg. NPS</span>
  </div>
</div>

<!-- Filters -->
<div class="filters-card">
  <form class="filters-form" method="GET" action="/portal/surveys">
    <div class="filter-group">
      <label for="event_id">Event</label>
      <select id="event_id" name="event_id">
        <option value="">All Events</option>
        <% events.forEach(e => { %>
          <option value="<%= e.id %>" <%= filters.event_id == e.id ? 'selected' : '' %>><%= e.title %></option>
        <% }) %>
      </select>
    </div>
    <div class="filter-group">
      <label for="score_filter">Score</label>
      <select id="score_filter" name="score_filter">
        <option value="">All Scores</option>
        <option value="high" <%= filters.score_filter === 'high' ? 'selected' : '' %>>High (8-10)</option>
        <option value="medium" <%= filters.score_filter === 'medium' ? 'selected' : '' %>>Medium (5-7)</option>
        <option value="low" <%= filters.score_filter === 'low' ? 'selected' : '' %>>Low (1-4)</option>
      </select>
    </div>
    <button type="submit" class="btn btn-secondary">Filter</button>
    <a href="/portal/surveys" class="btn btn-outline">Clear</a>
  </form>
</div>

<!-- Data Table -->
<div class="table-card">
  <div class="table-responsive">
    <table class="data-table" role="table" aria-label="Surveys list">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Event</th>
          <th scope="col">Participant</th>
          <th scope="col">Satisfaction</th>
          <th scope="col">Usefulness</th>
          <th scope="col">NPS</th>
          <th scope="col" class="actions-col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (surveys && surveys.length > 0) { %>
          <% surveys.forEach(s => { %>
            <tr>
              <td data-label="Date"><%= s.survey_date ? new Date(s.survey_date).toLocaleDateString() : '-' %></td>
              <td data-label="Event"><%= s.event_title || '-' %></td>
              <td data-label="Participant"><%= s.first_name ? s.first_name + ' ' + s.last_name : '-' %></td>
              <td data-label="Satisfaction"><span class="score-badge score-<%= s.satisfaction_score >= 4 ? 'high' : s.satisfaction_score >= 3 ? 'medium' : 'low' %>"><%= s.satisfaction_score %>/5</span></td>
              <td data-label="Usefulness"><span class="score-badge score-<%= s.usefulness_score >= 4 ? 'high' : s.usefulness_score >= 3 ? 'medium' : 'low' %>"><%= s.usefulness_score %>/5</span></td>
              <td data-label="NPS"><span class="score-badge score-<%= s.recommendation_score >= 8 ? 'high' : s.recommendation_score >= 5 ? 'medium' : 'low' %>"><%= s.recommendation_score %>/10</span></td>
              <td class="actions-col">
                <div class="action-buttons">
                  <a href="/portal/surveys/<%= s.id %>" class="btn-icon" title="View" aria-label="View survey">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                  </a>
                  <% if (user && user.role === 'manager') { %>
                    <a href="/portal/surveys/<%= s.id %>/edit" class="btn-icon" title="Edit" aria-label="Edit survey">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                    </a>
                    <form action="/portal/surveys/<%= s.id %>/delete" method="POST" class="inline-form" onsubmit="return confirm('Delete this survey response?')">
                      <button type="submit" class="btn-icon btn-icon--danger" title="Delete" aria-label="Delete survey">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                      </button>
                    </form>
                  <% } %>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="no-data">No surveys found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../../partials/portal-footer') %>

