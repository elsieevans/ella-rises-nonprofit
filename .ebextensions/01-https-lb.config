# Configure Application Load Balancer for HTTPS
# Prerequisites:
# 1. Create an SSL certificate in AWS Certificate Manager (ACM)
# 2. Replace YOUR_CERTIFICATE_ARN with your actual ACM certificate ARN

option_settings:
  # Set the load balancer type to Application Load Balancer
  aws:elasticbeanstalk:environment:
    LoadBalancerType: application
  
  # Configure the HTTPS listener on port 443
  aws:elbv2:listener:443:
    Protocol: HTTPS
    SSLCertificateArns: YOUR_CERTIFICATE_ARN
    DefaultProcess: default
    ListenerEnabled: true
  
  # Keep HTTP listener for redirect (configured in next file)
  aws:elbv2:listener:default:
    ListenerEnabled: true
  
  # Health check configuration
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: /
    Port: '80'
    Protocol: HTTP

